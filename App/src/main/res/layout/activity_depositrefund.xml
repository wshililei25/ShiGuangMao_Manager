<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_page"
    android:orientation="vertical">

    <com.yizhipin.base.widgets.HeaderBar
        android:id="@+id/mHead"
        style="@style/MatchWrap"
        app:titleText="@string/titleDepositRefund" />

    <View
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@drawable/bg_h_05dp_solid_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="@dimen/padding_content"
            android:text="@string/refundedAmount" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@color/common_white"
            android:hint="@string/hintRefundedAmount"
            android:lines="1"
            android:padding="@dimen/padding_content"
            android:singleLine="true"
            android:textColor="@color/text_light_dark"
            android:textSize="@dimen/text_middle_size" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@drawable/bg_h_05dp_solid_divider" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_content_middle"
        android:text="@string/allRefund"
        android:textColor="@color/common_red" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/bg_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/common_white"
            android:divider="@drawable/bg_h_05dp_solid_divider"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:showDividers="beginning|end">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="@dimen/padding_content"
                android:text="@string/refundedChannel" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:drawableEnd="@drawable/ic_right_arrow"
                android:lines="1"
                android:padding="@dimen/padding_content"
                android:singleLine="true"
                android:textColor="@color/text_light_dark" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginStart="@dimen/margin_views"
            android:background="@drawable/bg_h_05dp_solid_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/common_white"
            android:divider="@drawable/bg_h_05dp_solid_divider"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:showDividers="beginning|end">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="@dimen/padding_content"
                android:text="@string/aliAccount" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:drawableEnd="@drawable/ic_right_arrow"
                android:hint="@string/hintAliAccount"
                android:lines="1"
                android:padding="@dimen/padding_content"
                android:singleLine="true"
                android:textColor="@color/text_light_dark"
                android:textColorHint="@color/common_red" />
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/bg_divider" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/commit"
        android:textColor="@color/common_white"
        android:background="@drawable/bg_round_rect_solid_red"
        android:gravity="center"
        android:padding="@dimen/padding_content"
        android:layout_margin="@dimen/margin_views"/>

</LinearLayout>