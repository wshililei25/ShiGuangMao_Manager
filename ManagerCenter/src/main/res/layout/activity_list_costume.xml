<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_background">

    <FrameLayout
        android:background="@drawable/bg_rect_solid_white_bottom_divider"
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titleSize">

        <RadioGroup
            android:background="@drawable/bg_round_rect_stroke_red_solid_white"
            android:id="@+id/radioGroup"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_views_small"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/manRadioButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_def_white_red"
                android:button="@null"
                android:gravity="center"
                android:text="@string/man"
                android:textColor="@color/selector_def_red_white" />

            <RadioButton
                android:id="@+id/womanRadioButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_def_white_red"
                android:button="@null"
                android:gravity="center"
                android:text="@string/woman"
                android:textColor="@color/selector_def_red_white" />
        </RadioGroup>

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/padding_content"
            android:src="@drawable/leftarrow" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/contentView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/titleView" />
</RelativeLayout>