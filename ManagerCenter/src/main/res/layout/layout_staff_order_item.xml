<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              style="@style/MatchWrap.Vertical.White">

    <RelativeLayout
        style="@style/WrapWrap"
        android:padding="@dimen/yPaddingMiddle">

        <ImageView
            android:id="@+id/mIv"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/rightarrow"/>

        <TextView
            android:id="@+id/mNameTv"
            style="@style/WrapWrap"
            android:layout_marginLeft="@dimen/yPaddingMiddle"
            android:layout_toRightOf="@+id/mIv"
            android:text="婚纱摄影"
            android:textColor="@color/yRed"
            android:textSize="@dimen/yTextMiddleBigSize"/>

        <TextView
            android:id="@+id/mAmountTv"
            style="@style/WrapWrap"
            android:layout_marginRight="@dimen/yPaddingMiddle"
            android:layout_toLeftOf="@+id/line"
            android:text="0.00"
            android:textColor="@color/yRed"
            android:textSize="@dimen/yTextMiddleBigSize"/>

        <TextView
            android:id="@+id/mContentTv"
            style="@style/WrapWrap"
            android:layout_below="@+id/mNameTv"
            android:layout_marginLeft="@dimen/yPaddingMiddle"
            android:layout_marginTop="@dimen/yPaddingSmall"
            android:layout_toRightOf="@+id/mIv"
            android:text="婚纱摄影"
            android:textColor="@color/yBlack"
            android:textSize="@dimen/yTextMiddleSize"/>

        <TextView
            android:id="@+id/mDateTv"
            style="@style/WrapWrap"
            android:layout_alignBottom="@+id/mIv"
            android:layout_marginLeft="@dimen/yPaddingMiddle"
            android:layout_toRightOf="@+id/mIv"
            android:text="拍摄阶段"
            android:textColor="@color/yCategory"
            android:textSize="@dimen/yTextMiddleSize"/>

        <View
            android:id="@+id/line"
            style="@style/DividerFixedWidth"
            android:layout_alignBottom="@+id/mIv"
            android:layout_marginRight="@dimen/yPaddingMiddle"
            android:layout_toLeftOf="@+id/mRightView"/>

        <LinearLayout
            android:id="@+id/mRightView"
            style="@style/WrapWrap.Vertical"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/mHeadIv"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/avatar_w"
                app:civ_border_color="@color/border_image"
                app:civ_border_width="2dp"/>

            <TextView
                android:id="@+id/mUserNameTv"
                style="@style/WrapWrap"
                android:layout_marginTop="@dimen/yPaddingMiddle"
                android:text="婚纱摄影"
                android:textColor="@color/yBlack"
                android:textSize="@dimen/yTextMiddleBigSize"/>
        </LinearLayout>
    </RelativeLayout>

    <View style="@style/DividerFixedHeight"/>
</LinearLayout>
