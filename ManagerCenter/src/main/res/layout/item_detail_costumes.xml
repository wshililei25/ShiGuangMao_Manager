<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/titleCostumesText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rect_solid_white_bottom_divider"
        android:padding="@dimen/padding_content" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/costumeRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/titleCostumesText"
        android:orientation="horizontal"
        android:paddingTop="@dimen/padding_content"
        android:paddingBottom="@dimen/padding_content"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager" />
</RelativeLayout>