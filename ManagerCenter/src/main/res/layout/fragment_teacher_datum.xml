<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchMatch.Vertical.Common">

    <ScrollView
        style="@style/MatchWrap.White">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/bg_h_05dp_solid_divider"
            android:orientation="vertical"
            android:showDividers="middle">

            <LinearLayout
                android:id="@+id/mShopView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/common_white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="@dimen/padding_content"
                    android:text="@string/keyShop" />

                <TextView
                    android:id="@+id/mShopTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@color/common_white"
                    android:drawablePadding="@dimen/padding_drawable"
                    android:padding="@dimen/padding_content"
                    android:textColor="@color/text_light_dark" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/common_white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="@dimen/padding_content"
                    android:text="@string/keyTeacherType" />

                <TextView
                    android:id="@+id/mTeacherTypeEt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@color/common_white"
                    android:clickable="false"
                    android:drawablePadding="@dimen/padding_drawable"
                    android:enabled="false"
                    android:padding="@dimen/padding_content"
                    android:textColor="@color/text_light_dark" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/common_white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="@dimen/padding_content"
                    android:text="@string/keyPostType" />

                <TextView
                    android:id="@+id/mQuartersTypeEt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@color/common_white"
                    android:clickable="false"
                    android:drawablePadding="@dimen/padding_drawable"
                    android:enabled="false"
                    android:padding="@dimen/padding_content"
                    android:textColor="@color/text_light_dark" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mAddressView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/common_white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="@dimen/padding_content"
                    android:text="@string/keyCity" />

                <TextView
                    android:id="@+id/mAddressTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@color/common_white"
                    android:clickable="false"
                    android:drawablePadding="@dimen/padding_drawable"
                    android:enabled="false"
                    android:padding="@dimen/padding_content"
                    android:textColor="@color/text_light_dark" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/common_white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="@dimen/padding_content"
                    android:text="@string/keyDetailAddress" />

                <TextView
                    android:id="@+id/mAddressDetailEv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@color/common_white"
                    android:clickable="false"
                    android:drawablePadding="@dimen/padding_drawable"
                    android:enabled="false"
                    android:padding="@dimen/padding_content"
                    android:textColor="@color/text_light_dark" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/common_white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="@dimen/padding_content"
                    android:text="@string/keyUrgencyLinkMan" />

                <TextView
                    android:id="@+id/mContactsEt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@color/common_white"
                    android:clickable="false"
                    android:drawablePadding="@dimen/padding_drawable"
                    android:enabled="false"
                    android:padding="@dimen/padding_content"
                    android:textColor="@color/text_light_dark" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/common_white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="@dimen/padding_content"
                    android:text="@string/keyPhone" />

                <TextView
                    android:id="@+id/mContactsMobileEt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@color/common_white"
                    android:clickable="false"
                    android:drawablePadding="@dimen/padding_drawable"
                    android:enabled="false"
                    android:inputType="phone"
                    android:padding="@dimen/padding_content"
                    android:textColor="@color/text_light_dark" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/common_white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="@dimen/padding_content"
                    android:text="@string/keyEquipment" />

                <TextView
                    android:id="@+id/mDeviceEt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@color/common_white"
                    android:drawablePadding="@dimen/padding_drawable"
                    android:padding="@dimen/padding_content"
                    android:textColor="@color/text_light_dark" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/common_white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:paddingStart="@dimen/padding_content"
                    android:paddingTop="@dimen/padding_content"
                    android:text="@string/keySelfIntroduction" />

                <TextView
                    android:id="@+id/mIntroduceEt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@color/common_white"
                    android:gravity="start"
                    android:padding="@dimen/padding_content"
                    android:textColor="@color/text_light_dark" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>